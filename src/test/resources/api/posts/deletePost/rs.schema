{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "userId": {
      "type": "integer"
    },
    "tags": {
      "type": "array",
      "items": {
                "type": "string"
              },
             "minItems": 2,
             "maxItems": 4,
             "uniqueItems": true
    },
    "reactions": {
      "type": "integer"
    },
    "isDeleted": {
      "type": "boolean"
    },
    "deletedOn": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "title",
    "body",
    "userId",
    "tags",
    "reactions",
    "isDeleted",
    "deletedOn"
  ]
}
